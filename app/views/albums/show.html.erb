<h1><%= @album.title %></h1>
<p id="notice"><%= notice %></p>

<h2>Posts</h2>
<% @album.posts.each do |post| %>
  <ul>
    <%= link_to post.display_name, album_post_path(post, album_id: params[:id]) %></li>
  </ul>
<% end %>

<%= link_to 'Edit', edit_album_path(@album) %> |
<%= link_to 'Back', albums_path %>
